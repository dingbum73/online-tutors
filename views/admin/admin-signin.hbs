{{> header}}
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Admin登入</h1>
      <form action="/admin/signin" method="POST">
        <div class="mb-3">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" autocomplete="email" name="email" class="form-control"
            placeholder="Enter Email">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">Password</label>
          <input type="password" id="password" autocomplete="current-password" name="password" class="form-control"
            placeholder="Enter Password">
        </div>
        <div class="d-flex flex-column">
          <button type="submit" class="btn btn-info btn-block mb-2">登入</button>
        </div>
      </form>
    </div>