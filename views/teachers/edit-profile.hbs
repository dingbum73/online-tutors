{{> header route='teacherProfile'}}
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <form action="/teachers/{{teacher.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="name" class="mb-2">Name<span class="required text-danger">*</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name"
            value="{{teacher.name}}">
        </div>
        <div class="mb-3">
          <label for="introduction" class="mb-2">Your Introduction<span class="required text-danger">*</label>
          <textarea name="introduction" id="introduction" class="form-control"
            placeholder="Enter Your Introduction">{{teacher.introduction}}</textarea>
        </div>
        <div class="mb-3">
          <label for="teachingStyle" class="mb-2">Your Teaching Style<span class="required text-danger">*</label>
          <textarea name="teachingStyle" id="teachingStyle" class="form-control"
            placeholder="Enter Your Teaching Style">{{teacher.teachingStyle}}</textarea>
        </div>
        <div class="mb-3">
          <label for="duringTime" class="mb-2">單堂課程時間(分鐘)<span class="required text-danger">*</label>
          <input type="text" id="duringTime" name="duringTime" class="form-control" placeholder="輸入教學分鐘"
            value="{{teacher.duringTime}}">
        </div>
        <div class="mb-3">

          <label for="url" class="mb-2">視訊連結<span class="required text-danger">*</label>
          <input type="text" id="url" name="url" class="form-control" placeholder="Enter URL" value="{{teacher.url}}">
        </div>
        <div class="mb-3">
          <fieldset>
            <legend>開放預約</legend>
            <input type="checkbox" id="MON" name="appointment" value="1" {{#ifCondinArray 1
              teacher.appointment}}checked{{/ifCondinArray}} />
            <label for="MON" class="mb-2">MON</label>
            <input type="checkbox" id="TUE" name="appointment" value="2" {{#ifCondinArray 2
              teacher.appointment}}checked{{/ifCondinArray}} />
            <label for="TUE" class="mb-2">TUE</label>
            <input type="checkbox" id="WED" name="appointment" value="3" {{#ifCondinArray 3
              teacher.appointment}}checked{{/ifCondinArray}} />
            <label for="WED" class="mb-2">WED</label>
            <input type="checkbox" id="THU" name="appointment" value="4" {{#ifCondinArray 4
              teacher.appointment}}checked{{/ifCondinArray}} />
            <label for="THU" class="mb-2">THU</label>
            <input type="checkbox" id="FRI" name="appointment" value="5" {{#ifCondinArray 5
              teacher.appointment}}checked{{/ifCondinArray}} />
            <label for="FRI" class="mb-2">FRI</label>
            <input type="checkbox" id="SAT" name="appointment" value="6" {{#ifCondinArray 6
              teacher.appointment}}checked{{/ifCondinArray}} />
            <label for="SAT" class="mb-2">SAT</label>
            <input type="checkbox" id="SUN" name="appointment" value="0" {{#ifCondinArray 0
              teacher.appointment}}checked{{/ifCondinArray}} />
            <label for="SUN" class="mb-2">SUN</label>
          </fieldset>
        </div>
        <div class="mb-3">
          <label class="form-label" for="image">Image</label>
          <input class="form-control" type="file" class="form-control-file" id="image" name="image">
        </div>
        <div class="d-flex flex-column">
          <button type="submit" class="btn btn-info btn-block mb-2">確認編輯</button>
          <a class="btn btn-outline-secondary btn-block m-2" href="javascript:history.back()">Back</a>
        </div>
      </form>
    </div>
  </div>
</div>